@using PRN211_Project_OBS.Controllers
@using PRN211_Project_OBS.Models
@{
    ViewBag.Title = "Index";
    HomeController home = new HomeController();
    List<Genre> genres = home.GetGenres();
    BookDetailController bd = new BookDetailController();
    Book book = bd.GetBookById(ViewBag.Param_Id);
    Author author = bd.GetAuthorById(book.author_id.ToString());
    List<Genre> tag = bd.GetGenreByBookId(book.id.ToString());
    List<Book> relate = bd.GetRelatedBook(book);
}

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title>A book a day | Give the stress away</title>
    <!-- Google font -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,500,700" rel="stylesheet">

    <!-- Bootstrap -->
    <link type="text/css" href="~/Content/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Slick -->
    <link type="text/css" href="~/Content/css/slick.css" rel="stylesheet" />
    <link type="text/css" href="~/Content/css/slick-theme.css" rel="stylesheet" />

    <!-- nouislider -->
    <link type="text/css" href="~/Content/css/nouislider.min.css" rel="stylesheet" />

    <!-- Font Awesome Icon -->
    <link href="~/Content/css/font-awesome.min.css" rel="stylesheet" />

    <!-- Custom stlylesheet -->
    <link type="text/css" href="~/Content/css/style.css" rel="stylesheet" />

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>

<body>
    <!-- NAVIGATION -->
    <nav id="navigation">
        <!-- container -->
        <div class="container">
            <!-- responsive-nav -->
            <div id="responsive-nav">
                <!-- NAV -->
                <ul class="main-nav nav navbar-nav">
                    <li><a href="hompage">Home</a></li>
                    @foreach (var item in genres)
                    {
                        <li><a href="Genre?genre_id=@item.id"> @item.name</a></li>
                    }
                </ul>
                <!-- /NAV -->
            </div>
            <!-- /responsive-nav -->
        </div>
        <!-- /container -->
    </nav>
    <!-- /NAVIGATION -->
    <!-- BREADCRUMB -->
    <div id="breadcrumb" class="section">
        <!-- container -->
        <div class="container">
            <!-- row -->
            <div class="row">
                <div class="col-md-12">
                    <ul class="breadcrumb-tree">
                        <li><a href="Home">Home</a></li>
                        <li><a href="#">Books</a></li>
                        <li class="active">@book.title</li>
                    </ul>
                </div>
            </div>
            <!-- /row -->
        </div>
        <!-- /container -->
    </div>
    <!-- /BREADCRUMB -->
    <!-- SECTION -->
    <div class="section">
        <!-- container -->
        <div class="container">
            <!-- row -->
            <div class="row">
                <!-- Product main img -->
                <div class="col-md-5 col-md-push-2">
                    <div id="product-main-img">
                        <div class="product-preview">
                            <img src="/Content/img/@book.image_url" alt="">
                        </div>

                        <div class="product-preview">
                            <img src="/Content/img/1_@book.image_url" alt="">
                        </div>

                        <div class="product-preview">
                            <img src="/Content/img/2_@book.image_url" alt="">
                        </div>

                        <div class="product-preview">
                            <img src="/Content/img/3_@book.image_url" alt="">
                        </div>
                    </div>
                </div>
                <!-- /Product main img -->
                <!-- Product thumb imgs -->
                <div class="col-md-2  col-md-pull-5">
                    <div id="product-imgs">
                        <div class="product-preview">
                            <img src="/Content/img/@book.image_url" alt="">
                        </div>

                        <div class="product-preview">
                            <img src="/Content/img/1_@book.image_url" alt="">
                        </div>

                        <div class="product-preview">
                            <img src="/Content/img/2_@book.image_url" alt="">
                        </div>

                        <div class="product-preview">
                            <img src="/Content/img/3_@book.image_url" alt="">
                        </div>
                    </div>
                </div>
                <!-- /Product thumb imgs -->

                <!-- Product details -->
                <div class="col-md-5">
                    <form action="#" method="post">
                        <input name="url" value="#" hidden>
                        <input name="id" value="@book.id" hidden>
                        <div class="product-details">
                            <br><br><br><br>
                            <h2 class="product-name">@book.title</h2>
                            <div>
                                <div class="product-rating">
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                </div>
                            </div>
                            <div>
                                <h3 class="product-price">$ @book.price.00</h3>
                                <span class="product-available">In Stock</span>
                            </div>
                            <p></p>

                            <div class="product-options"></div>

                            <div class="add-to-cart">
                                <div class="qty-label">
                                    Qty
                                    <div class="input-number">
                                        <input name="quantity" type="number" value="1">
                                        <span class="qty-up">+</span>
                                        <span class="qty-down">-</span>
                                    </div>
                                </div>
                                <button class="add-to-cart-btn"><i class="fa fa-shopping-cart"></i> add to cart</button>
                            </div>

                            <ul class="product-btns">
                                <li><a href="#"><i class="fa fa-heart-o"></i> add to wishlist</a></li>
                            </ul>

                            <ul class="product-links">
                                <li>Genre:</li>
                                @foreach (var item in tag)
                                {
                                    <li><a href="#">@item.name</a></li>
                                }
                            </ul>

                            <ul class="product-links">
                                <li>Share:</li>
                                <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                                <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                                <li><a href="#"><i class="fa fa-google-plus"></i></a></li>
                                <li><a href="#"><i class="fa fa-envelope"></i></a></li>
                            </ul>
                        </div>
                    </form>
                </div>
                <!-- /Product details -->
                <!-- Product tab -->
                <div class="col-md-12">
                    <div id="product-tab">
                        <!-- product tab nav -->
                        <ul class="tab-nav">
                            <li class="active"><a data-toggle="tab" href="#tab1">Description</a></li>
                            <li><a data-toggle="tab" href="#tab2">Details</a></li>
                            <li><a data-toggle="tab" href="#tab3">Reviews (0)</a></li>
                        </ul>
                        <!-- /product tab nav -->
                        <!-- product tab content -->
                        <div class="tab-content">
                            <!-- tab1  -->
                            <div id="tab1" class="tab-pane fade in active">
                                <div class="row">
                                    <div class="col-md-12">
                                        <p style="text-align: center">@book.description</p>
                                    </div>
                                </div>
                            </div>
                            <!-- /tab1  -->
                            <!-- tab2  -->
                            <div id="tab2" class="tab-pane fade in">
                                <div class="row">
                                    <div class="col-md-12">
                                        <p style="text-align: center">Author: <a href="">@author.name</a></p>
                                        <p style="text-align: center"><a href="@author.wiki_url">See more on Wikipedia</a></p>
                                    </div>
                                </div>
                            </div>
                            <!-- /tab2  -->
                            <!-- tab3 -->
                            <div id="tab3" class="tab-pane fade in">
                                <div class="row">
                                    <!-- Reviews -->
                                    <div class="col-md-6">
                                        <div id="reviews">
                                            <ul class="reviews">
                                                <%
                                                for (Review elem : list) {
                                                %>
                                                <li>
                                                    <div class="review-heading">
                                                        <h5 class="name"><%=elem.getUsername()%></h5>
                                                        <p class="date"><%=elem.getDate()%></p>
                                                    </div>
                                                    <div class="review-body">
                                                        <p><%=elem.getReview()%></p>
                                                    </div>
                                                </li>
                                                <% } %>
                                            </ul>

                                            <ul class="reviews-pagination">
                                                <c:forEach begin="1" end="${pagesize}" var="i">
                                                    <c:choose>
                                                        <c:when test="${page==i}">
                                                            <li class="active">${i}</li>
                                                        </c:when>
                                                        <c:otherwise>
                                                            <li><a href="detail?id=${book.getId()}&page=${i}">${i}</a></li>
                                                        </c:otherwise>
                                                    </c:choose>
                                                </c:forEach>
                                            </ul>
                                        </div>
                                    </div>
                                    <!-- /Reviews -->
                                    <!-- Review Form -->
                                    <div class="col-md-6">
                                        <div id="review-form">
                                            <form action="addReview" method="post" class="review-form">
                                                <input name="url" value="${url}" hidden>
                                                <input name="id" value="${book.getId()}" hidden>
                                                <input type="text" name="username" class="input" value="<%=name%>" readonly>
                                                <textarea type="text" name="review" class="input" placeholder="Your Review"></textarea>
                                                <button type="submit" class="primary-btn">Submit</button>
                                            </form>
                                        </div>
                                    </div>
                                    <!-- /Review Form -->
                                </div>
                            </div>
                            <!-- /tab3  -->
                        </div>
                        <!-- /product tab content  -->
                    </div>
                </div>
                <!-- /product tab -->
            </div>
            <!-- /row -->
        </div>
        <!-- /container -->
    </div>
    <!-- /SECTION -->
    <!-- Section -->
    <div class="section">
        <!-- container -->
        <div class="container">
            <!-- row -->
            <div class="row">
                <div class="col-md-12">
                    <div class="section-title text-center">
                        <h3 class="title">Related Products</h3>
                    </div>
                </div>

                <!-- product -->

                @foreach (var item in relate)
                {
                    <div class="col-md-3 col-xs-6">
                        <form action="#" method="post">
                            <div class="product">
                                <div class="product-img">
                                    <img src="~/Content/img/@item.image_url" alt="">
                                </div>
                                <div class="product-body">
                                    <input name="quantity" value="1" hidden>                                    
                                    <h3 class="product-name"><a href="#">@item.title</a></h3>
                                    <h4 class="product-price">$ @item.price.00</h4>
                                    <div class="product-rating">
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                    </div>
                                    <div class="product-btns">
                                        <button class="add-to-wishlist"><i class="fa fa-heart-o"></i><span class="tooltipp">add to wishlist</span></button>
                                        <button class="quick-view"><i class="fa fa-eye"></i><span class="tooltipp">quick view</span></button>
                                    </div>
                                </div>
                                <input name="url" value="" hidden>
                                <div class="add-to-cart">
                                    <button type="submit" class="add-to-cart-btn"><i class="fa fa-shopping-cart"></i> add to cart</button>
                                </div>
                            </div>
                        </form>
                    </div>
                }

                <!-- /product -->
            </div>
            <!-- /row -->
        </div>
        <!-- /container -->
    </div>
    <!-- /Section -->
    <!-- jQuery Plugins -->
    <script src="~/Scripts/js/jquery.min.js"></script>
    <script src="~/Scripts/js/bootstrap.min.js"></script>
    <script src="~/Scripts/js/slick.min.js"></script>
    <script src="~/Scripts/js/nouislider.min.js"></script>
    <script src="~/Scripts/js/jquery.zoom.min.js"></script>
    <script src="~/Scripts/js/main.js"></script>
</body>
</html>
